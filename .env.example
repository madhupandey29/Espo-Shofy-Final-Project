# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://your-backend-url.com/api
NEXT_PUBLIC_SITE_URL=https://your-site-url.com
NEXT_PUBLIC_SITE_NAME=Your Site Name

# API Data Filtering Configuration
NEXT_PUBLIC_SITE_FILTER=your_site_filter
NEXT_PUBLIC_COMPANY_FILTER=YOUR_COMPANY

# Product API Configuration
NEXT_PUBLIC_TOP_RATED_TAG=YourTopRatedTag
NEXT_PUBLIC_POPULAR_TAG=YourPopularTag

# MerchTag Filtering - Only show products with this merchTag in shop page
NEXT_PUBLIC_MERCH_TAG_FILTER=your_merch_tag

# Chat Configuration - Primary URL for chat service, fallback to local API
NEXT_PUBLIC_CHAT_MESSAGE_URL=https://your-backend-url.com/api/chat/message

# Optional API Configuration (uncomment if needed)
# NEXT_PUBLIC_API_KEY=your_api_key
# NEXT_PUBLIC_ADMIN_EMAIL=your-admin@email.com

# Cloudinary Configuration
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
NEXT_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_api_key

# Cache Configuration
REVALIDATE_SECONDS=600

# Build configuration - suppress React warnings
DISABLE_ESLINT_PLUGIN=true
GENERATE_SOURCEMAP=false
CI=false